{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchCurrentVersion": "< 1.0.0",
      "updateTypes": ["minor"],
      "automerge": false
    },
    {
      "depTypeList": ["devDependencies"],
      "automerge": true
    }
  ]
}
